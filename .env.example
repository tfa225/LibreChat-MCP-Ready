#=====================================================================#
#                       LibreChat Configuration                       #
#=====================================================================#

#==================================================#
#               Server Configuration               #
#==================================================#

HOST=localhost
PORT=3080

MONGO_URI=mongodb://mongodb:27017/LibreChat

DOMAIN_CLIENT=http://localhost:3080
DOMAIN_SERVER=http://localhost:3080

# Generate your keys at https://www.librechat.ai/toolkit/creds_generator
# Replace these with your generated values
CREDS_KEY=replace_with_generated_creds_key
CREDS_IV=replace_with_generated_creds_iv
JWT_SECRET=replace_with_generated_jwt_secret
JWT_REFRESH_SECRET=replace_with_generated_jwt_refresh_secret
MEILI_MASTER_KEY=replace_with_generated_meili_master_key

# GitHub API Key
GITHUB_API_KEY=your_github_token_here

#==================================================#
#                     Endpoints                     #
#==================================================#

ENDPOINTS=openAI,assistants,azureOpenAI,google,anthropic

#============#
# Anthropic  #
#============#

ANTHROPIC_API_KEY=user_provided

#============#
# OpenAI     #
#============#

OPENAI_API_KEY=user_provided

#====================#
#   Assistants API   #
#====================#

ASSISTANTS_API_KEY=user_provided

#============#
# Google     #
#============#

GOOGLE_KEY=user_provided

#==================================================#
#                      Search                      #
#==================================================#

SEARCH=true
MEILI_NO_ANALYTICS=true
MEILI_HOST=http://meilisearch:7700

#===================================================#
#                    User System                    #
#===================================================#

ALLOW_EMAIL_LOGIN=true
ALLOW_REGISTRATION=true
ALLOW_SOCIAL_LOGIN=false
ALLOW_SOCIAL_REGISTRATION=false
ALLOW_PASSWORD_RESET=false
ALLOW_UNVERIFIED_EMAIL_LOGIN=true